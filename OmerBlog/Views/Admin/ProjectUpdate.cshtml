
@{
    ViewData["Title"] = "ProjectUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-8 mx-auto">
    <h2 class="text-center">Proje Güncelle</h2>
    <form method="post" action="" enctype="multipart/form-data">
        <div class="form-group">
            <label>Proje Başlık</label>
            <input type="text" required="" maxlength="50" name="ProjeBaslik" class="form-control" value="@ViewBag.baslik" />
        </div>
        <div class="form-group">
            <label>Proje Alt Başlık</label>
            <input type="text" required="" maxlength="50" name="ProjeAltBaslik" class="form-control" value="@ViewBag.altbaslik" />
        </div>
        <div class="form-group">
            <label>Proje Tarih</label>
            <input type="date" required="" name="ProjeTarih" class="form-control" value="@ViewBag.tarih" />
        </div>
        <div class="form-group">
            <label>Proje Detay</label>
            <textarea class="form-control" maxlength="500" required="" name="ProjeDetay">@ViewBag.detay</textarea>
        </div>
        <div class="form-group">
            <label>Proje Resim-1</label>
            <input type="hidden" name="ProjeResim1" />
            <img src="~/img/@ViewBag.resim" alt="resim" width="200"  /><br />
            <input type="file" name="file" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Proje Resim-2</label>
            <input type="hidden" name="ProjeResim2" />
            <img src="~/img/@ViewBag.resim2" alt="resim2" width="200" /><br />
            <input type="file" name="file2" class="form-control" />
        </div>
        <div class="form-group">
            <label>Proje Resim-3</label>
            <input type="hidden" name="ProjeResim3" />
            <img src="~/img/@ViewBag.resim3" alt="resim3" width="200" /><br />
            <input type="file" name="file3" class="form-control"/>
        </div>
        <input type="submit" value="Proje Güncelle" class="form-control btn btn-primary" />
    </form>
</div>


