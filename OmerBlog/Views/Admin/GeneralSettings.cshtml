
@{
    ViewData["Title"] = "GeneralSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var deger = ViewBag.bilgi;
}
<div class="col-8 mx-auto">
    <h2 class="text-center">Site Ayarları</h2>
    <form method="post" action="">
        @if (deger == null)
        { }
        else
        {<div class="alert alert-success" role="alert">
                İşlem Başarılı
            </div>
        }
        <div class="form-group">
            <label>Site Başlık</label>
            <input type="text" name="SiteBaslik"maxlength="50" required="" class="form-control" value="@ViewBag.baslik" />
        </div>
        <div class="form-group">
            <label>Site Açıklama</label>
            <input type="text" name="SiteAciklama" maxlength="500" class="form-control" value="@ViewBag.aciklama" />
        </div>
        <div class="form-group">
            <label>Site Anahtar Kelime</label>
            <input type="text" name="SiteAnahtarKelime" maxlength="500" class="form-control" value="@ViewBag.kelime" />
        </div>
        <div class="form-group">
            <label>Google Analiz</label>
            <input type="text" name="GoogleAnaliz" maxlength="50" class="form-control" value="@ViewBag.analiz" />
        </div>
        <div class="form-group">
            <label>Site Host Adresi</label>
            <input type="text" name="SiteHostAdres" maxlength="50" class="form-control" value="@ViewBag.host" />
        </div>
        <div class="form-group">
            <label>Site Port</label>
            <input type="text" name="SitePort" maxlength="50" class="form-control" value="@ViewBag.mail" />
        </div>
        <div class="form-group">
            <label>Site Mail</label>
            <input type="text" name="SiteMail" maxlength="50" class="form-control" value="@ViewBag.port" />
        </div>
        <div class="form-group">
            <label>Site Şifre</label>
            <input type="password" name="SiteSifre" maxlength="50" class="form-control" value="@ViewBag.sifre" />
        </div>
        <input type="submit" value="Kaydet" class="form-control btn btn-primary" />
    </form>
</div>