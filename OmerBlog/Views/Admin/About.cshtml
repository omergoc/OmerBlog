@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var deger = ViewBag.islem;
}
<div class="col-8 mx-auto">
    <h2 class="text-center">Hakkında Ayarlar</h2>
    <form method="post" action="/Admin/About" enctype="multipart/form-data">
        @if (deger == null)
        { }
        else
        {<div class="alert alert-success" role="alert">
                İşlem Başarılı
            </div>
        }
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" name="Ad" maxlength="50" required="" class="form-control" value="@ViewBag.ad" />
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" name="Soyad" maxlength="50" required="" class="form-control" value="@ViewBag.soyad" />
        </div>
        <div class="form-group">
            <label>E-Posta</label>
            <input type="email" name="Eposta" maxlength="50" required="" class="form-control" value="@ViewBag.eposta" />
        </div>
        <div class="form-group">
            <label>Telefon</label>
            <input type="number" name="Telefon" maxlength="50" required="" class="form-control" value="@ViewBag.telefon" />
        </div>
        <div class="form-group">
            <label>Ülke</label>
            <input type="text" name="Ulke" maxlength="50" class="form-control" value="@ViewBag.ulke" />
        </div>
        <div class="form-group">
            <label>Şehir</label>
            <input type="text" name="Sehir" maxlength="50" class="form-control" value="@ViewBag.sehir" />
        </div>
        <div class="form-group">
            <label>Adres</label>
            <input type="text" name="Adres" maxlength="80" class="form-control" value="@ViewBag.adres" />
        </div>
        <div class="form-group">
            <label>Resim</label><br />
            <input type="hidden" name="Resim" />
            <img src="~/img/@ViewBag.resim" alt="resim" width="80" /><br />
            <input type="file" name="file" class="form-control" />
        </div>
        <div class="form-group">
            <label>Detay</label>
            <textarea class="form-control" maxlength="500"name="Detay">@ViewBag.detay</textarea>
        </div>
        <input type="submit" value="Kaydet" class="form-control btn btn-primary" />
    </form>
</div>