
@{
    ViewData["Title"] = "UserSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var deger = ViewBag.islem;
}
<div class="col-8 mx-auto">
    <h2 class="text-center">Profil Güncelle</h2>
    <form method="post" action="">
        @if (deger == null)
        { }
        else
        {<div class="alert alert-danger" role="alert">
                E-Posta Kullanılmakta
            </div>
        }
        <div class="form-group">
            <label>E-Posta</label>
            <input  type="email" disabled maxlength="50" required="" name="AdminEmail" class="form-control" value="@ViewBag.email" />
        </div>
        <div class="form-group">
            <label>Adı Soyadı</label>
            <input type="text" maxlength="50" required="" name="AdminAd" class="form-control" value="@ViewBag.ad" />
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input type="password" maxlength="100" required="" name="AdminPassword" class="form-control"  />
        </div>
        <input type="submit" value="Kaydet" class="form-control btn btn-success" />
    </form>
</div>