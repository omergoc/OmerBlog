@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-8 mx-auto">
    <h2 class="text-center">Proje Ekle</h2>
    <form method="post" action="" enctype="multipart/form-data">
        <div class="form-group">
            <label>Proje Başlık</label>
            <input type="text" maxlength="50" required="" name="ProjeBaslik" class="form-control" />
        </div>
        <div class="form-group">
            <label>Proje Alt Başlık</label>
            <input type="text" maxlength="50" required="" name="ProjeAltBaslik" class="form-control" />
        </div>
        <div class="form-group">
            <label>Proje Tarih</label>
            <input type="date" required="" name="ProjeTarih" class="form-control" />
        </div>
        <div class="form-group">
            <input required type="file" name="file" class="form-control" />
        </div>
        <div class="form-group">
            <label>Proje Resim-2</label>
            <input required type="file" name="file2" class="form-control" />
        </div>
        <div class="form-group">
            <label>Proje Resim-3</label>
            <input required type="file" name="file3" class="form-control" />
        </div>
        <div class="form-group">
            <label>Proje Detay</label>
            <textarea class="form-control" maxlength="500" required="" name="ProjeDetay"></textarea>
        </div>
        <input type="submit" value="Proje Ekle" class="form-control btn btn-success" />
    </form>
</div>

