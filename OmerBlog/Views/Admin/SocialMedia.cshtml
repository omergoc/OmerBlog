
@{
    ViewData["Title"] = "SocialMedia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var deger = ViewBag.bilgi;
}
<div class="col-8 mx-auto">
    <h2 class="text-center">Sosyal Medya Ayarları</h2>
    <form method="post" action="">
        @if (deger == null)
        { }
        else
        {<div class="alert alert-success" role="alert">
                İşlem Başarılı
            </div>
        }
        <div class="form-group">
            <label>Facebook</label>
            <input type="text" maxlength="50" name="SiteFacebook" class="form-control" value="@ViewBag.facebook" />
        </div>
        <div class="form-group">
            <label>Twitter</label>
            <input type="text" maxlength="50" name="SiteTwitter" class="form-control" value="@ViewBag.twitter" />
        </div>
        <div class="form-group">
            <label>İnstagram</label>
            <input type="text" maxlength="50" name="Siteİnstagram" class="form-control" value="@ViewBag.instagram" />
        </div>
        <div class="form-group">
            <label>Linkedin</label>
            <input type="text" maxlength="50" name="SiteLinkedin" class="form-control" value="@ViewBag.linkedin" />
        </div>
        <div class="form-group">
            <label>Github</label>
            <input type="text" maxlength="50" name="SiteGithub" class="form-control" value="@ViewBag.github" />
        </div>
        <input type="submit" value="Kaydet" class="form-control btn btn-primary" />
    </form>
</div>

