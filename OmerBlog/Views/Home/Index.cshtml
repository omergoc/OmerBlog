@{ 
    var egitimler = ViewBag.egitimler;
    var deneyimler = ViewBag.deneyimler;
    var yetenekler = ViewBag.yetenekler;
    var projeler = ViewBag.projeler;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta charset="utf-8" />
    <title>Hoşgeldiniz - @ViewBag.SiteBaslik</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/resume.min.css" rel="stylesheet">

</head>
<style type="text/css">
    .arkaplan{
        background-color:forestgreen;
    }
</style>
<body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-dark arkaplan  fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Clarence Taylor</span>
            <span class="d-none d-lg-block">
                <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="~/img/@ViewBag.resim" alt="profil-foto">
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#about">Hakkında</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#experience">Deneyimler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#education">Eğitimler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#skills">Yetenekler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#project">Projeler</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid p-0">

        <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
            <div class="my-auto">
                <h1 class="mb-0">
                    @ViewBag.ad
                    <span class="text-primary">@ViewBag.soyad</span>
                </h1>
                <div class="subheading mb-5">
                    <a href="mailto:@ViewBag.eposta">@ViewBag.eposta</a>
                </div>
                <p class="lead mb-5">@ViewBag.detay</p>
                <div class="social-icons">
                    <a target="_blank" href="@ViewBag.SiteLinkedin">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a target="_blank" href="@ViewBag.SiteGithub">
                        <i class="fab fa-github"></i>
                    </a>
                    <a target="_blank" href="@ViewBag.SiteTwitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a  target="_blank" href="@ViewBag.SiteFacebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                </div>
            </div>
        </section>

        <hr class="m-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
            <div class="my-auto">
                <h2 class="mb-5">Deneyimler</h2>
                @foreach (var item in deneyimler)
                {
    <div class="resume-item d-flex flex-column flex-md-row mb-5">
        <div class="resume-content mr-auto">
            <h3 class="mb-0">@item.DeneyimBaslik</h3>
            <div class="subheading mb-3">@item.DeneyimAltBaslik</div>
            <p>@item.DeneyimDetay</p>
        </div>
        <div class="resume-date text-md-right">
            <span class="text-primary">@item.DeneyimBaslangic - @item.DeneyimBitis</span>
        </div>
    </div>}
            </div>

        </section>

        <hr class="m-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
            <div class="my-auto">
                <h2 class="mb-5">Eğitimler</h2>
                @foreach (var item in egitimler)
                {
    <div class="resume-item d-flex flex-column flex-md-row mb-5">
        <div class="resume-content mr-auto">
            <h3 class="mb-0">@item.EgitimBaslik</h3>
            <div class="subheading mb-3">@item.EgitimAltBaslik</div>
            <div>@item.EgitimDetay</div>
        </div>
        <div class="resume-date text-md-right">
            <span class="text-primary">@item.EgitimBaslangic - @item.EgitimBitis</span>
        </div>
    </div>}
            </div>
        </section>

        <hr class="m-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="skills">
            <div class="my-auto">
                <h2 class="mb-5">Yetenekler</h2>
                <ul class="fa-ul mb-0">
                    @foreach (var item in yetenekler)
                    {
        <li>
            <i class="fa-li fa fa-check"></i>
            @item.YetenekAd
        </li>}
                </ul>
            </div>
        </section>

        <hr class="m-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="project">
            <div class="my-auto">
                <h2 class="mb-5">Projeler</h2>
                @foreach (var item in projeler)
                {
                    <div class="resume-item d-flex flex-column flex-md-row mb-5">
                        <div class="resume-content mr-auto">
                            <h3 class="mb-0">@item.ProjeBaslik</h3>
                            <div class="subheading mb-3">@item.ProjeAltBaslik</div>
                            <p>@item.ProjeDetay</p>
                            <img src="~/img/@item.ProjeResim1" width="250" height="150" alt="projeresim" />
                            <img src="~/img/@item.ProjeResim2" width="250" height="150" alt="projeresim" />
                            <img src="~/img/@item.ProjeResim3" width="250" height="150" alt="projeresim" />
                        </div>
                        <div class="resume-date text-md-right">
                            <span class="text-primary">@item.ProjeTarih</span>
                        </div>
                    </div>}
            </div>
        </section>
        <hr class="m-0">
    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/resume.min.js"></script>

</body>

</html>
