
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="~/layout/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <script defer src="~/layout/solid.js"></script>
    <script defer src="~/layout/fontawesome.js"></script>
</head>

<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Admin Panel</h3>
            </div>

            <ul class="list-unstyled components">
                <p>Admin</p>
                <li class="active">
                    <a href="/Admin/Index">Anasayfa</a>
                </li>
                <li>
                    <a href="/Admin/About">Hakkında</a>
                </li>
                <li>
                    <a href="#deneyim" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Deneyimler</a>
                    <ul class="collapse list-unstyled" id="deneyim">
                        <li>
                            <a href="/Admin/Experience">Deneyim Ekle</a>
                        </li>
                        <li>
                            <a href="/Admin/ExperienceList">Tüm Deneyimler</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#egitim" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Eğitimler</a>
                    <ul class="collapse list-unstyled" id="egitim">
                        <li>
                            <a href="/Admin/Education">Eğitim Ekle</a>
                        </li>
                        <li>
                            <a href="/Admin/EducationList">Tüm Eğitimler</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/Admin/Ability">Yetenekler</a>
                </li>
                <li>
                    <a href="#proje" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Projeler</a>
                    <ul class="collapse list-unstyled" id="proje">
                        <li>
                            <a href="/Admin/Project">Proje Ekle</a>
                        </li>
                        <li>
                            <a href="/Admin/ProjectList">Tüm Projeler</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#lisans" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Lisanslar</a>
                    <ul class="collapse list-unstyled" id="lisans">
                        <li>
                            <a href="/Admin/License">Lisans Ekle</a>
                        </li>
                        <li>
                            <a href="/Admin/LicenseList">Tüm Lisanslar</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/Admin/Users">Kullanıcılar</a>
                </li>
                <li>
                    <a href="/Admin/GeneralSettings">Site Ayarları</a>
                </li>
                <li>
                    <a href="/Admin/SocialMedia">Sosyal Medya Ayarları</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Mobil Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" target="_blank" href="/Home/Index">Siteyi Görüntüle</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/Admin/UserSettings">Kullanıcı İşlemleri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Logout">Çıkış Yap</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    <script src="~/layout/jquery-3.3.1.slim.min.js"></script>
    <script src="~/layout/popper.min.js"></script>
    <script src="~/layout/bootstrap.min.js"></script>
    <script type="text/javascript">$(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });</script>
</body>

</html>